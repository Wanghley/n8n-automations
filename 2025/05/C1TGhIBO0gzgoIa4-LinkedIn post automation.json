      "parameters": {
        "jsCode": "// Aggregate every incoming binary chunk into ‚Äúdata0‚Äù, ‚Äúdata1‚Äù, ‚Ä¶\nconst binaryData = $input.all().reduce((acc, item, idx) => {\n  if (item.binary?.data) acc[`data${idx}`] = item.binary.data;\n  return acc;\n}, {});\n\n// First item: holds all binary blobs\nconst aggregatedBinaryItem = {\n  json: {},      // mandatory\n  binary: binaryData,\n};\n\nreturn aggregatedBinaryItem;"
      },
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
